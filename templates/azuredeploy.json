                            "apiVersion": "2020-07-01-preview",
                            "name": "[concat(variables('appConfigName'), '/CONFIG:startTimeTag')]",
                            "dependsOn": [
                                "[resourceId('Microsoft.AppConfiguration/configurationStores', variables('appConfigName'))]"
                            ],
                            "properties": {
                                "value": "[parameters('startTimeTag')]",
                                "contentType": "string"
                            }
                        },
                        {
                            "type": "Microsoft.AppConfiguration/configurationStores/keyValues",
                            "apiVersion": "2020-07-01-preview",
                            "name": "[concat(variables('appConfigName'), '/CONFIG:endTimeTag')]",
                            "dependsOn": [
                                "[resourceId('Microsoft.AppConfiguration/configurationStores', variables('appConfigName'))]"
                            ],
                            "properties": {
                                "value": "[parameters('endTimeTag')]",
                                "contentType": "string"
                            }
                        },
                        {
                            "type": "Microsoft.AppConfiguration/configurationStores/keyValues",
                            "apiVersion": "2020-07-01-preview",
                            "name": "[concat(variables('appConfigName'), '/CONFIG:setStatePrefix')]",
                            "dependsOn": [
                                "[resourceId('Microsoft.AppConfiguration/configurationStores', variables('appConfigName'))]"
                            ],
                            "properties": {
                                "value": "[parameters('setStatePrefix')]",
                                "contentType": "string"
                            }
                        },
                        {
                            "type": "Microsoft.AppConfiguration/configurationStores/keyValues",
                            "apiVersion": "2020-07-01-preview",
                            "name": "[concat(variables('appConfigName'), '/CONFIG:saveStatePrefix')]",
                            "dependsOn": [
                                "[resourceId('Microsoft.AppConfiguration/configurationStores', variables('appConfigName'))]"
                            ],
                            "properties": {
                                "value": "[parameters('saveStatePrefix')]",
                                "contentType": "string"
                            }
                        },
                        {
                            "condition": "[parameters('alertEnable')]",
                            "type": "microsoft.insights/actionGroups",
                            "apiVersion": "2019-03-01",
                            "name": "[variables('actionGroupName')]",
                            "location": "Global",
                            "tags": {
                            },
                            "properties": {
                                "groupShortName": "[variables('actionGroupShortName')]",
                                "enabled": true,
                                "copy": [
                                    {
                                        "name": "emailReceivers",
